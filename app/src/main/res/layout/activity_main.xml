<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/showtoastbutton"
            android:layout_width="260dp"
            android:layout_height="0dp"
            android:id="@+id/btnShowToast"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.508"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <EditText
            android:layout_width="260dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/btnShowToast"
            app:layout_constraintEnd_toEndOf="@+id/btnShowToast" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnShowToast" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:hint="Enter the message"/>
    <Button
            android:text="@string/btnsendata"
            android:layout_width="260dp"
            android:layout_height="0dp"
            android:id="@+id/btnSendDataToActivity" app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/editText" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="share to other apps"
            android:layout_width="260dp"
            android:layout_height="0dp"
            android:id="@+id/btnShareToOtherApps" app:layout_constraintEnd_toEndOf="@+id/btnSendDataToActivity"
            app:layout_constraintStart_toStartOf="@+id/btnSendDataToActivity" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSendDataToActivity" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="recycle view demo"
            android:layout_width="260dp"
            android:layout_height="0dp"
            android:id="@+id/btnRecycleViewDemo" app:layout_constraintEnd_toEndOf="@+id/btnShareToOtherApps"
            app:layout_constraintStart_toStartOf="@+id/btnShareToOtherApps" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnShareToOtherApps" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>